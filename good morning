<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Good Morning Message</title>
    <script>
        function showPrompt() {
            let answer;
            const correctAnswer = "sunshine";
            while (answer !== correctAnswer) {
                answer = prompt("What's the secret word?").toLowerCase();
                if (answer === correctAnswer) {
                    document.getElementById("message").innerText = "Good morning, my sunshine!";
                } else {
                    alert("Try again!");
                }
            }
        }
    </script>
</head>
<body onload="showPrompt()">
    <div id="message" style="font-size: 20px; margin-top: 20px;"></div>
</body>
</html>
